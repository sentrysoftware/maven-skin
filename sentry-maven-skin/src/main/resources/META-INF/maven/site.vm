#parse( "tools.vm" )
<!DOCTYPE html><html lang="en">

<head>
	<title>$title</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="$relativePath/css/bootstrap.min.css">
	<link rel="stylesheet" href="$relativePath/css/lightbox.min.css">
	<meta http-equiv="content-language" content="en" />
	<link href="$relativePath/css/sentry.css" rel="stylesheet" />
	<link href="$relativePath/css/print.css" rel="stylesheet" media="print" />
	<link href="$relativePath/css/font-awesome.min.css" rel="stylesheet"> 
</head>

<body class="$!solutionClass">

<div class="container-fluid">
	<!--Dark desktop banner with Sentry's links-->
	<div class="row hidden-xs" id="logoBanner">
		<div class="col-md-12">
			<ul>
				<li class="logo"><a href="http://www.sentrysoftware.com">home</a></li>
				<li><a href="http://www.sentrysoftware.com/support/user-documentation.asp">user documentation</a></li>
				<li><a href="http://www.sentrysoftware.com/kb/">knowledge base</a></li>
				<li><a href="http://www.sentrysoftware.com/support/patches/">patches</a></li>
				<li><a href="http://www.sentrysoftware.com/support/product-lifecycle.asp">product lifecycle</a></li>
				<li><a href="http://docs.bmc.com" target="_blank">docs.bmc.com</a></li>
			</ul>
		</div>
	</div>
	<!--Dark mobile banner with only one Sentry's link-->
	<div class="row hidden-lg hidden-md hidden-sm" id="logoBanner">
		<div class="col-md-12">
			<ul>
				<li><a href="http://www.sentrysoftware.com">Sentry Software</a></li>
			</ul>
		</div>
	</div>	

	<div class="row" id="productNameBanner">
		<nav class="navbar navbar-inverse" style="margin-bottom: 0;">
			<div class="container-fluid">			
				<!--Banner with product name and version-->		
				<div class="navbar-header">
					<p>$project.name</p>
					<span>Version <strong>$project.version</strong></span>
				</div>
				<!--Dropdown mobile menu-->
				<ul class="nav navbar-nav">
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">$shortTitle
						<span class="caret"></span></a>
						<ul class="dropdown-menu"> #*
							*##foreach ( $menu in $decoration.body.menus ) #*
								*##links ( $menu.items )#*
							*##end##
						</ul>
					</li>
				</ul>
				<!--Search form https://www.sentrysoftware.com/_search/index.asp-->
				<form class="navbar-form navbar-right hidden-xs hidden-sm" method="get" action="https://www.sentrysoftware.com/library/_search/index.asp">
					<div class="input-group">
						<input size="40" type="text" name="zoom_query" class="form-control" placeholder="Search...">						
						<!--
						In the URL (get method, via hidden fields), we send the following variables: zoom_cat, projectName, projectVersion, solutionClass.
						So the search page in /Library/_search/index.asp (which includes /Library/_search/search.asp) can get and display these elements
						-->
						<input type="hidden" name="zoom_cat[]" value="$!productNumber">
						<input type="hidden" name="productName" value="$project.name">
						<input type="hidden" name="productVersion" value="$project.version">
						<input type="hidden" name="solutionClass" value="$!solutionClass">
						<div class="input-group-btn">
							<button class="" type="submit">
								<i class="fa fa-search" aria-hidden="true"></i>
							</button>
						</div>
					</div>
				</form>
			</div>

		</nav>
	</div>


	<div class="row" id="mainContainer">
		<!--Left desktop menu-->
		<div class="col-md-3 hidden-xs hidden-sm" id="navigationCol">
		<nav>
			#foreach ( $menu in $decoration.body.menus ) #*
			*#<h5 class="text-uppercase">$menu.name</h5>
			<ul class="nav nav-pills nav-stacked">
				#foreach ( $item in $menu.items )#*
					*##activeLink ( $item.href )
					<li class="$activeClass"><a href="$relativeLink" title="$item.name">$item.name</a></li>
				#end
			</ul>
			#end##

		</nav>
		</div>
		<div class="col-md-9 col-xs-12 col-sm-12" id="mainContent">
			<div class="row">
			

		
			
#if ( $headingsSelector != "" )
			
				<!--Mobile collapsible table of content (toc)-->
				<div class="panel-group panelToc hidden-md hidden-lg" id="accordion" role="tablist" aria-multiselectable="true">
				  <div class="panel panel-default">
					<div class="panel-heading" role="tab" id="headingOne">
					  <h4 class="panel-title">
						<a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
						  Table of Content
						</a>
					  </h4>
					</div>
					<div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
					  <div class="panel-body">
						#*					*##listToc ( $tocItems )
					  </div>
					</div>
				  </div>
				</div>				
			
				<!--Desktop table of content (toc)-->
				<div class="col-md-4 col-md-push-8 hidden-xs hidden-sm"> 
					<div data-spy="affix" data-offset-top="160">
						<div class="toc" id="listToc">
						<span>Table of Content</span>
	#*					*##listToc ( $tocItems )
						</div>
					</div>
				</div>
				
				<!--Main content with a toc-->
				<div class="col-md-8 col-md-pull-4">
#*					*#$bodyContent
				</div>
#else
				<!--Main content without toc-->
				<div class="col-md-12">
					$bodyContent
				</div>
#end
			</div>
		</div>

	</div>
	<!--Footer in mobile and desktop-->
	<div class="row" id="footer">
		<div class="col-md-12">
			<p><strong>$project.name $project.version</strong> <span class="hidden-xs">|</span> <br class="hidden-sm hidden-md hidden-lg"/>Documentation as of <strong>$date.get("yyyy-MM-dd")</strong></p>
			<span>Copyrights &copy;2017 All Rights Reserved by Sentry Software</span>
		</div>		
	</div>	
</div>
<div id="gotoTop" onclick="topFunction()"><i class="fa fa-angle-up" aria-hidden="true"></i></div>

	<script src="$relativePath/js/jquery.min.js"></script>
	<script src="$relativePath/js/bootstrap.min.js"></script>
	<script src="$relativePath/js/lightbox.min.js"></script>
	<script>
		lightbox.option({
			fadeDuration: 200,
			resizeDuration: 200
		})
		// When the user scrolls down 500px from the top of the document, show the button
		window.onscroll = function() {scrollFunction()};

		function scrollFunction() {
			if (document.body.scrollTop > 500 || document.documentElement.scrollTop > 500) {
			document.getElementById("gotoTop").style.display = "block";
		} else {
			document.getElementById("gotoTop").style.display = "none";
		}
		}
		// When the user clicks on the button, scroll to the top of the document
		function topFunction() {
			document.body.scrollTop = 0; // For Chrome, Safari and Opera 
			document.documentElement.scrollTop = 0; // For IE and Firefox
		}
	</script>

</body>
</html>